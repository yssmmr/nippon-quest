

  <%= @user.introduction %>
  <%= image_tag @user.get_profile_image,size: "400x300" %>
  <%= @user.name %>
  <%= @user.account_id %>

  <p>訪れた県： <%= @user.posts.group(:prefecture).count.keys.size %>/47県</p>
  <p>場所　<%= @user.posts.group(:location_genre).count["location"] || 0 %>件</p>
  <P>飲食店　<%= @user.posts.group(:location_genre).count["restarant"] ||0 %>件</P>
  <p>フォロー<%= @user.followers.count %>人</p>
  <p>フォロワー<%= @user.followings.count %>人</p>

 <% unless @user == current_user %>
    <% if current_user.following?(@user) %>
      <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
    <% end %>
 <% end %>

  <h2><%= @user.name %>さんの投稿一覧</h2>

<% @posts.each do |post| %>
  <%= image_tag post.get_image,size: "400x300" %>
  <%= link_to post.user.name, user_path(post.user.id) %>
  <%= post.user.account_id %>
  <%= link_to post.location_name, post_path(post.id) %>
  <%= post.address %>
  <%= post.memo %>
  <%= post.location_genre_i18n %>
  <%= post.prefecture_i18n %>

<% end %>
