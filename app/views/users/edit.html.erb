<div class="container text-center mt-3 mb-3">

  <h2 class="mb-4">ユーザー編集</h2>

  <%= form_with model: @user do |f| %>

    <div>▷プロフィール画像</div>
    <div class="mt-3 mb-4">
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <div class="mb-4">
      <%= f.label :account_id,"▷ユーザーID" %></br>
      <%= f.label :acccount_id, "(6~12文字 英数字混合)" %></br>
      <%= f.text_field :account_id, autocomplete: "account_id" %>
    </div>

    <div class="mb-4">
      <%= f.label :name, "▷名前" %></br>
      <%= f.text_field :name, autocomplete: "name" %>
    </div>

    <div>
      <%= f.label :introduction, "▷自己紹介文" %></br>
      <%= f.text_area :introduction %>
    </div>


    <div class="mt-4">
     <%= image_submit_tag("編集.png") %>
     <%= link_to "退会", user_path, method: :delete, "data-confirm" => "本当に退会しますか？" %>
    </div>

  <% end %>
  </div>
