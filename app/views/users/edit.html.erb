<div class="container text-center mt-5 mb-4 main-height">

  <u><h1 class="mb-4">ユーザー編集</h1></u>

  <div class="mb-5">
    <% if @user.errors.any? %>
      <h5>★<%= @user.errors.count %>件のエラーが発生しました★</h5>
      <% @user.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= form_with model: @user do |f| %>

    <h4 class="pt-4"><%= f.label :profile_image,"▷プロフィール画像" %></h4>
    <div class="d-flex justify-content-center"><%= f.file_field :profile_image, accept: "image/*" %></div>

    <div class="row justify-content-center mt-3 mb-4">

      <div id="new-image"></div>
    </div>

    <h4 class="mb-4">
      <%= f.label :account_id,"▷ユーザーID" %></br>
      <%= f.label :acccount_id, "(6~12文字 英数字混合)" %></br>
      <%= f.text_field :account_id, autocomplete: "account_id" %>
    </h4>

    <h4 class="mb-4">
      <%= f.label :name, "▷名前" %></br>
      <%= f.text_field :name, autocomplete: "name" %>
    </h4>

    <h4>
      <%= f.label :introduction, "▷自己紹介文" %></br>
      <%= f.text_area :introduction %>
    </h4>

    <div class="row mt-5 justify-content-center">
      <%= image_submit_tag("編集.png") %>
       <%= link_to user_path, method: :delete, "data-confirm" => "本当に退会しますか？" do %>
         <%= image_tag "退会.png" %>
       <% end %>
    </div>

  <% end %>
</div>
