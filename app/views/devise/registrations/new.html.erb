<div class="container text-center">

  <h1 class="m-5">新規会員登録</h1>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :"▷名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field mb-4">
      <%= f.label :"▷ユーザーID" %><br />
      <%= f.label :"(6~12文字 英数字混合)" %><br />
      <%= f.text_field :account_id, autofocus: true, autocomplete: "account_id" %>
    </div>

    <div class="field mb-4">
      <%= f.label :"▷メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mb-4">
      <%= f.label :"▷パスワード" %><br />
      <%= f.label :"(6~12文字 英数字混合)" %></br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field mb-5">
      <%= f.label :"▷パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>



     <%= image_submit_tag("会員登録.png") %>


  <% end %>

</div>