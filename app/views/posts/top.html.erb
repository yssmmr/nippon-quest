<%= javascript_include_tag 'jquery.japan-map.js' %>
<script>
  let areas = [
      <% (0..46).each do |i| %>
        {code: <%= i + 1 %>, color: '<%= @map_prefs.include?(i) ? '#D45D70' : '#f0f0f0' %>', prefectures: [<%= i + 1 %>]},
      <% end %>
    ]
  $(function(){
    $("#map-container").japanMap({
        width: 1000,
        areas :areas
      });
  });
</script>

<div id="map-container"></div>





